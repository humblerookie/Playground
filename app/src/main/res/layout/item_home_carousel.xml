<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:layout_marginHorizontal="@dimen/margin_normal"
    android:background="@color/black"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wolverine" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/black"
        android:elevation="@dimen/margin_normal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_atomic"
        android:paddingLeft="@dimen/margin_small"
        android:paddingRight="@dimen/margin_small">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:maxLines="1"
            android:text="Wolverine"
            android:textColor="@color/white_87"
            android:textSize="@dimen/font_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_atomic"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="@dimen/rating_bar_width"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:progressTint="@color/gold"
                android:rating="3.8"
                android:secondaryProgressTint="@color/gold"
                android:stepSize="0.1" />

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/bold"
                android:gravity="right"
                android:text="2011"
                android:textColor="@color/white_87"
                android:textSize="@dimen/font_small" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>